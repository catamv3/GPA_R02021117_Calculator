<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Horizontal row for inputs -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/course1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:backgroundTint="?attr/colorPrimary"
                android:hint="Course 1"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant" />

            <EditText
                android:id="@+id/course2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:backgroundTint="?attr/colorPrimary"
                android:hint="Course 2"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant" />

            <EditText
                android:id="@+id/course3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:backgroundTint="?attr/colorPrimary"
                android:hint="Course 3"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant" />

            <EditText
                android:id="@+id/course4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:backgroundTint="?attr/colorPrimary"
                android:hint="Course 4"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant" />

            <EditText
                android:id="@+id/course5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_margin="8dp"
                android:backgroundTint="?attr/colorPrimary"
                android:hint="Course 5"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant" />

        </GridLayout>

        <!-- Compute Button -->
        <Button
            android:id="@+id/btnCompute"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="?attr/colorPrimary"
            android:text="Compute GPA"
            android:textColor="?attr/colorOnPrimary" />

        <!-- GPA Result -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="12dp"
            android:background="?attr/colorSurface"
            android:text="Your GPA will appear here"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp" />

        <!-- Night/Day Mode Toggle -->
        <Button
            android:id="@+id/btnToggleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="?attr/colorPrimary"
            android:text="Toggle Theme"
            android:textColor="?attr/colorOnPrimary" />

    </LinearLayout>
</ScrollView>
