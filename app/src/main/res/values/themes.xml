<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light Theme -->
    <style name="Base.Theme.GPA_R02021117_Calculator" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary_variant</item>
        <item name="colorOnPrimary">@color/light_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorSecondaryVariant">@color/light_primary_variant</item>
        <item name="colorOnSecondary">@color/light_on_secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnBackground">@color/light_on_background</item>
        <item name="colorOnSurface">@color/light_on_surface</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/light_primary_variant</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/light_on_background</item>
        <item name="android:textColorSecondary">@color/gray_6</item>
        <item name="android:textColorHint">@color/gray_5</item>

        <!-- Button style -->
        <item name="buttonStyle">@style/Widget.App.Button</item>

        <!-- EditText style -->
        <item name="editTextStyle">@style/Widget.App.EditText</item>
    </style>

    <style name="Theme.GPA_R02021117_Calculator" parent="Base.Theme.GPA_R02021117_Calculator" />

    <!-- Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/light_primary</item>
        <item name="android:textColor">@color/light_on_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.App.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_primary</item>
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:textColorHint">@color/gray_5</item>
    </style>
</resources>